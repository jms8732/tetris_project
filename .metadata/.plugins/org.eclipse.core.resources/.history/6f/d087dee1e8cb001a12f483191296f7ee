package genetic_tetris;

public class Weight {
	int number = 0;
	int line = 0;
	long score;
	double blank_weight; // ºóÄ­
	double complete_line_weight; // ¿Ï¼ºµÈ ÁÙ
	double round_block_weight; // ÁÖÀ§ÀÇ ºí·Ï
	double height_weight; // ³ôÀÌ
	double down_blank_weight; // ¾Æ·¡ ºí·°
	double side_block_weight; // ¿· ºí·°
	double baseline_weight; // ¹Ù´Ú¸é
	double hole_weight; // ±¸¸Û
	double up_block_weight; // ºó ±¸¸Û À§¿¡ ÀÖ´Â ºí·Ï

	public Weight(int n, int l, long s, double bw, double clw, double rbw, double hw, double dbw, double sbw,
			double blw, double hl, double ubw) {
		this.number = n;
		this.line = l;
		this.score = s;
		this.blank_weight = Math.abs(Math.round(bw * 10000.0) / 10000.0);
		this.complete_line_weight =Math.abs(Math.round(clw * 10000.0) / 10000.0);
		this.round_block_weight = Math.abs(Math.round(rbw* 10000.0)/10000.0);
		this.height_weight = Math.abs(Math.round(hw*10000.0)/10000.0);
		this.down_blank_weight = Math.abs(Math.round(dbw*10000.0)/10000.0);
		this.side_block_weight = Math.abs(Math.round(sbw*10000.0)/10000.0);
		this.baseline_weight = Math.abs(Math.round(blw*10000.0)/10000.0);
		this.hole_weight = Math.abs(Math.round(hl*10000.0)/10000.0);
		this.up_block_weight = Math.abs(Math.round(ubw*10000.0)/10000.0);
	}

}