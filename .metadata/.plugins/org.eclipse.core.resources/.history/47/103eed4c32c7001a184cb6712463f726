package toy_project;

import java.util.*;

public class play_game {
	public static void main(String[] args) {
		PlayThread pt = PlayThread.getInstance();
		
		// 블록을 1초씩 떨어뜨리기 하기 위한 장치
		Timer timer = new Timer();
		TimerTask task = new TimerTask() {
			@Override
			public void run() {
				try {
					if (!PlayThread.game_finish)
						PlayThread.dir = 0;
					else {
						System.out.println("timer Finish");
						timer.cancel();
					}
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		};

		timer.schedule(task, 0, 1000);

		pt.start();
	}
}
