package genetic_tetris;

import java.util.*;

public class tetris_block {
	private Random rn; // 테트리스 블럭을 랜덤으로 생성하기 변수
	public int color, numOfRotate =4;

	public tetris_block() {
		rn = new Random();
	}

	public List<Point> generateRandomBlock() {

		int j = 0;//rn.nextInt(7); // 7개의 테트리스 블럭 중 하나가 랜덤으로 생성된다.
		this.color = j;
		List<Point> list = new ArrayList<>();

		if(j == 0 || j == 4 || j == 5)
			this.numOfRotate = 2;
		
		if(j == 6)
			this.numOfRotate = 1;
		
		if (j == 0) {
			int[] x_idx = { 0, 0, 0, 0 };
			int[] y_idx = { 4, 5, 6, 7 };
			make(list, x_idx, y_idx);

		} else if (j == 1) {
			int[] x_idx = { 1, 1, 0, 1 };
			int[] y_idx = { 4, 5, 5, 6 };
			make(list, x_idx, y_idx);

		} else if (j == 2) {
			int[] x_idx = { 1, 1, 1, 0 };
			int[] y_idx = { 4, 6, 5, 6 };
			make(list, x_idx, y_idx);

		} else if (j == 3) {
			int[] x_idx = { 0, 1, 1, 1 };
			int[] y_idx = { 4, 4, 5, 6 };
			make(list, x_idx, y_idx);

		} else if (j == 4) {
			int[] x_idx = { 0, 0, 1, 1 };
			int[] y_idx = { 4, 5, 5, 6 };
			make(list, x_idx, y_idx);

		} else if (j == 5) {
			int[] x_idx = { 1, 1, 0, 0 };
			int[] y_idx = { 4, 5, 5, 6 };
			make(list, x_idx, y_idx);
		} else {
			int[] x_idx = { 0, 0, 1, 1 };
			int[] y_idx = { 4, 5, 4, 5 };

			make(list, x_idx, y_idx);
		}

		return list;
	}

	private void make(List<Point> list, int[] x_idx, int[] y_idx) {
		for (int i = 0; i < 4; i++) {
			list.add(new Point(x_idx[i], y_idx[i]));
		}
	}
}
